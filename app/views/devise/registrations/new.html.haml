
.col-md-4
.col-md-4
  %div.form-group
    %label.col-sm-4
    %div.col-sm-8.actions
      %h2
        = t('.title_sign_up')
      %br
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal', role: 'form' }) do |f|
    %div.form-group
      = f.label :email, t('.email'), { class: 'col-sm-4 control-label' }
      %div.col-sm-8
        = f.email_field :email, :class => "form-control", autocomplete: "email", autofocus: true, :type => "groupname"
    %div.form-group
      = f.label :password, t('.password'), { class: 'col-sm-4 control-label' }
      %div.col-sm-8
        = f.password_field :password, :class => "form-control", autocomplete: "new-password"
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} characters minimum)
    %div.form-group
      = f.label :password_confirmation, t('.password_confirmation'), { class: 'col-sm-4 control-label' }
      %div.col-sm-8
        = f.password_field :password_confirmation, :class => "form-control", autocomplete: "new-password"
    %div.form-group
      %label.col-sm-4
      %div.col-sm-8.actions
        = f.submit t('.sign_up'), { class: 'btn btn-primary' }
  = render "devise/shared/links"
.col-md-4